{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "environmentName": {
        "type": "string",
        "metadata": {
          "description": "The name of the system environment"
        }
      },
      "apiName": {
        "type": "string"
      },
      "apiDescription": {
        "type": "string"
      },
      "apiSubscriptionRequired": {
        "type": "bool",
        "metadata": {
          "description": "Specifies whether an API or Product subscription is required for accessing the API."
        }
      },
      "apiServiceUrl": {
        "type": "string",
        "metadata": {
          "description": "Absolute URL of the backend service implementing this API."
        }
      },
      "apiPath": {
        "type": "string",
        "metadata": {
          "description": "Relative URL uniquely identifying this API and all of its resource paths within the API Management service instance. It is appended to the API endpoint base URL specified during the service instance creation to form a public URL for this API."
        }
      },
      "apiContentValue": {
        "type": "string",
        "metadata": {
          "description": "Raw Github URL of Swagger JSON Doc"
        }
      },
      "apiPolicyUrl": {
        "type": "string",
        "metadata": {
          "description": "Raw Github URL of API Policy in XML Format"
        }
      },
      "shortName": {
        "type": "string",
        "metadata": {
          "description": "The short name of the system environment"
        }
      },
        "ccd-keyvault-name": {
        "type": "string"
      },
        "ccd-service-key-name": {
        "type": "string"
      },
        "ccd-totp-url": {
        "type": "string"
      },
        "ccd-s2s-url": {
        "type": "string"
      },
        "ccd-backend-url": {
        "type": "string"
      },
        "ccd-microservice-name": {
        "type": "string"
      }
    },
    "variables": {
      "apiManagementServiceName": "[concat('core-api-mgmt-',parameters('environmentName'))]",
      "apiManagementResourceGroup": "[concat('core-infra-',parameters('shortName'))]",
      "apiManangementResourceId": "[resourceId(variables('apiManagementResourceGroup'),'Microsoft.ApiManagement/service',variables('apiManagementServiceName'))]"
    },
    "resources": [
      {
        "type": "Microsoft.ApiManagement/service/apis",
        "name": "[concat(variables('apiManagementServiceName'), parameters'(apiName)]",
        "apiVersion": "2019-01-01",
        "dependsOn": [
          "[variables('apiManangementResourceId')]"
        ],
        "properties": {
            "displayName": "[parameters('apiName')]",
            "apiRevision": "1",
            "serviceUrl": "[parameters('apiServiceUrl')]",
            "description": "[parameters('apiDescription')]",
            "subscriptionRequired": "[parameters('apiSubscriptionRequired')]",
            "path": "[parameters('apiPath')]",
            "protocols": [
                "https"
            ],
            "authenticationSettings": null,
            "subscriptionKeyParameterNames": null,
            "contentValue": "[parameters('apiContentValue')]",
            "contentFormat": "swagger-link-json"
        }
      },
      {
        "name": "ccd-backend-url",
        "type": "Microsoft.ApiManagement/service/properties",
        "apiVersion": "2019-01-01",
        "properties": {
          "tags": [
            "ccd"
          ],
          "displayName": "ccd-backend-url",
          "value": "[parameters('ccd-backend-url')]"
        }
      },
      {
        "name": "ccd-service-key-name",
        "type": "Microsoft.ApiManagement/service/properties",
        "apiVersion": "2019-01-01",
        "properties": {
          "tags": [
            "ccd"
          ],
          "displayName": "ccd-service-key-name",
          "value": "[parameters('ccd-service-key-name')]"
        }
      },
      {
        "name": "ccd-totp-url",
        "type": "Microsoft.ApiManagement/service/properties",
        "apiVersion": "2019-01-01",
        "properties": {
          "tags": [
            "ccd"
          ],
          "displayName": "ccd-totp-url",
          "value": "[parameters('ccd-totp-url')]"
        }
      },
      {
        "name": "ccd-s2s-url",
        "type": "Microsoft.ApiManagement/service/properties",
        "apiVersion": "2019-01-01",
        "properties": {
          "tags": [
            "ccd"
          ],
          "displayName": "ccd-s2s-url",
          "value": "[parameters('ccd-s2s-url')]"
        }
      },
      {
        "name": "ccd-keyvault-name",
        "type": "Microsoft.ApiManagement/service/properties",
        "apiVersion": "2019-01-01",
        "properties": {
          "tags": [
            "ccd"
          ],
          "displayName": "ccd-keyvault-name",
          "value": "[parameters('ccd-keyvault-name')]"
        }
      },
      {
        "name": "ccd-microservice-name",
        "type": "Microsoft.ApiManagement/service/properties",
        "apiVersion": "2019-01-01",
        "properties": {
          "tags": [
            "ccd"
          ],
          "displayName": "ccd-microservice-name",
          "value": "[parameters('ccd-microservice-name')]"
        }
      },
      {
        "name": "[parameters('policyName')]",
        "type": "Microsoft.ApiManagement/service/apis/policies",
        "apiVersion": "2019-01-01",
        "properties": {
          "value": "[parameters('apiPolicyUrl')]",
          "format": "rawxml-link"
        }
      }
    ]
  }
  